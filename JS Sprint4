// VARIABLES //
let olympicChampion;
olympicChampion = "Great Britain"; // or you can add it later, without using the let keyword
olympicChampion = "Brazil"; // you can change the variable's value at any time 
console.log(olympicChampion); // Brazil 

// IF + CONCATENATION  //
let hours = 19; // Current time in hours

// Now we're going to set a flight discount that gets progressively larger over time:
// From 6 to 9 p.m. the discount increases by 10% every hour
let discount = 0;

if (hours >= 18 && hours <= 21) {
    discount = (hours - 17) * 10;
}

// Let's print a message about the current discount
console.log("From " + hours + ":00, there will be a " + discount + "% discount on all flights.");

// "From 19:00, there will be a 20% discount on all flights"

// Let's print a message about the current discount ****
console.log(`From ${hours}:00, there will be a ${discount}% discount on all flights`);

// "From 19:00, there will be a 20% discount on all flights"

// SHORTHAND //
// option 1
let year1 = 365;
year1 = year1 + 1; // 366 
// option 2
let year2 = 365;
year2 += 1; // 366 ‚Äî this code does the exact same thing

let num1 = 10;
num1 += 1; // 11

let num2 = 10;
num2 -= 1; // 9

let num3 = 10;
num3 *= 2; // 20

let num4 = 10;
num4 /= 2; // 5 

//COMPARISON //
console.log(7 > 6); // true ‚Äî greater than
console.log(7 < 6); // false ‚Äî less than
console.log(7 >= 6); // true ‚Äî greater than or equal
console.log(7 <= 6); // false ‚Äî less than or equal
console.log(7 == 6); // false ‚Äî equality
console.log(7 != 6); // true ‚Äî inequality
console.log(7 === 6); // false ‚Äî identity (strict equality)
console.log(7 !== 6); // true ‚Äî non-identity (strict inequality)

console.log("123" == 123); // true
console.log("123" === 123); // false

console.log("all that glitters" === "gold"); // false ‚Äî these are two different strings
console.log("2" !== 2); // true ‚Äî the string "2" is not identical to the number 2
console.log("2" == 2); // true ‚Äî the string "2" is equal in value to the number 2
console.log(3 != 2); // true - 3 is not equal to 2

// IF  - Conditions //

let stockPrice = 644;

if (stockPrice > 800) {
  console.log("Time to sell");
} else if (stockPrice > 650) {
  console.log("Hold and wait for the price to go up");
} else if (stockPrice > 500) {
  console.log("So cheap, must buy more stocks");
} else {
  console.log("All in");
}
// "So cheap, must buy more stocks"
// Disclaimer: This if statement does not constitute investment advice


//BOOLEAN & LOGIC
let merry = true;
console.log(!merry); // false   ! means negation - turns true to false, false to true.

let christmas = false;
console.log(!christmas); // true

// LOGIC AND &&
let merry = true;
let christmas = false;

console.log(merry && christmas); // false  && returns true if both are true

//LOGIC OR ||
console.log(merry || christmas); // true 


//ARRAYS 
let months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
// this array contains all the months of the year
months[1]; // 'February'

months.length; // 12

[].length; // 0 - an empty array contains no elements, and its length is 0
['Jan','Feb','Mar'].length; // 3 ‚Äî the array has three elements, so its length is 3
months[months.length - 1] // Mar - we have to subtract 1 from the length because an array's index starts at 0

Elements in the array should be replaced or added as follows:
morningList[element_index] = new_value;  // [number] = replaced value .


//LOOPs

//While Loop
let number = 10;

while (number <= 20) {
    console.log(number);
    number += 2;
}

//if Loop   // for(initialization; condition; final expression)

for (let i = 0; i <= 10; i++) {
  console.log(i);
}

//do...while loop

let number = 21;

do {
    console.log(number);
} while (number <= 20);


//PARAMETERS
function keepScore(ours, theirs) {
    // Let's check whether our team has scored more goals:
    if (ours > theirs) {
        console.log("We won! üòÉ The score was " + ours + "-" + theirs);

        // If we didn't score more goals than they did,
        // maybe we scored the same amount? Check it:
    } else if (ours === theirs) {
        console.log("It's a draw. üòê The score was " + ours + "-" + theirs);

        // If neither of the previous two conditions were met,
        // it must mean that we scored fewer goals :(
    } else {
        console.log("We lost... üò¢ The score was " + ours + "-" + theirs);
    }
}

// RETURN   - after return function stops.

function sayHey(name) {
    // The code for how the input data will be transformed
    let greeting = 'Hey ' + name;
    // Let's return the result
    return greeting;    
}

let siriGreeting = sayHey("Siri");

console.log(siriGreeting); // "Hey Siri"


/// OBJECTS /// 

let myObject = {
    stringKey: 'value', // property
    numberKey: 4, // also a property
    booleanKey: true, // yet another property
  methodKey: function consoleKitten() { // and here we have a method
        console.log('kitten!');
    }
};

//sample
let customer = {
  name: 'Elise Bouer', // the property value is a string
  age: 24, // the property value is a number
  greet: function () { // the property value is a function
    console.log("Hello customer!")
  }
};

function printCustomerInfo(person) {
  console.log(person.name + " is " + person.age + " years old.");
}

/// Document Object Model  ///

<!-- index.html -->

<main id="container">
    <div class="content">
        <div class="content__item"></div>
        <div class="content__item"></div>
        <div class="content__item"></div>
    </div>
</main>

/* script.js */

let container = document.querySelector("#container");
let content = container.querySelector(".content");
let contentItem = content.querySelector(".content__item");

console.log(contentItem); // Will log: <div class="content__item"></div>

let contentItems = content.querySelectorAll(".content__item");

console.log(contentItems); /* Will log all elements with the .content__item class */

//// old usage \\\
getElementByID() // getElementsByClassName() // getElementsByTagName() - old ones////
// Searching for an element by its ID using querySelector
let container1 = document.querySelector("#container");

// Searching for an element by its ID using getElementById
let container2 = document.getElementById("container");

// Checking whether these elements are identical to each other
console.log(container1 === container2); // true - these elements are identical
